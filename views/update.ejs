<%- include("./partials/header.ejs") %> <%- include("./nav.ejs") %>

<form
  action="/update/<%= user._id %>"
  method="post"
  style="
    height: 80vh;
    width: 40vw;
    border: 1px solid rgb(198, 198, 198);
    margin-top: 35px;
    margin-left: 30%;
    padding: 40px 30px;
    border-radius: 20px;
    background-color: rgb(234, 233, 233);
  "
>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"> First Name</label>
    <input
      type="text"
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="First Name"
      name="firstname",
      value="<%= user.firstname %>"
    />
  </div>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Last Name</label>
    <input
      type="text"
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="Last Name"
      name="lastname"
      value="<%= user.lastname %>"
    />
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Email</label>
    <input
      type="email"
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="email"
      name="email"
      value="<%= user.email %>"
    />
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">JobRole</label>
    <input
      type="text"
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="JobRole"
      name="jobrole",
      value="<%= user.jobrole %>"
    />
  </div>
  <button class="btn btn-primary mt-4">submit</button>
</form>
<%- include("./partials/footer.ejs") %>
