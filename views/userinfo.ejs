<%- include("./partials/header.ejs") %> <%- include("./nav.ejs") %>

<table class="table table-success table-striped-columns" style="margin-top: 3%">
  <tr>
    <th scope="col">ID</th>
    <th scope="col">First</th>
    <th scope="col">Last</th>
    <th scope="col">Handle</th>
    <th scope="col">JobRole</th>
  </tr>
  <tr>
    <% users.forEach((user, index) => {%>
    <tbody>
      <tr>
        <th scope="row"><%= user._id %></th>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td style="display: flex; justify-content: space-between">
          <%= user.jobrole %>
          <a style="text-decoration: none; color: black;" href="/update/<%= user._id %>"
            ><i
              style="text-align: center;"
              class="ri-quill-pen-line"
            ></i
          ></a>
          <a style="text-decoration: none; color: black;" href="/delete/<%= user._id %>"><i class="ri-delete-bin-line"></i></a>
        </td>
      </tr>
    </tbody>
    <% }); %>
  </tr>
</table>

<%- include("./partials/footer.ejs") %>
